# Gojo Trip Planner Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME=Gojo Trip Planner
ENVIRONMENT=development  # development, staging, production

# Security
# Generate a secure secret key using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite+aiosqlite:///./gojo.db
DATABASE_ECHO=True  # Set to False in production

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp
UPLOAD_DIR=uploads

# Email Settings (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@gojotrips.com

# Frontend Settings
SITE_URL=http://127.0.0.1:8000
